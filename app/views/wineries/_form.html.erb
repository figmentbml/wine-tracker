<div class="page-header">
  <h1><%= title %></h1>
</div>

<div class="form">
  <%= form_for(@winery) do |f| %>

  <%= render "shared/errors", instance: @winery %>

  <div class="row form-group">
    <%= f.label :name, "Name*", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :name, class: "form-control"  %>
    </div>

    <%= f.label :description, "Description", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_area :description, class: "form-control"  %>
    </div>
  </div>

  <div class="row form-group">
    <%= f.label :street, "Street*", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :street, class: "form-control"  %>
    </div>

    <%= f.label :city, "City*", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :city, class: "form-control"  %>
    </div>
  </div>

  <div class="row form-group">
    <%= f.label :state, "State*", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :state, class: "form-control"  %>
    </div>

    <%= f.label :zip, "Zip*", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :zip, class: "form-control"  %>
    </div>
  </div>

  <div class="row form-group">
    <%= f.label :county, "County", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :county, class: "form-control"  %>
    </div>

    <%= f.label :hours, "Hours", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :hours, class: "form-control"  %>
    </div>
  </div>

  <div class="row form-group">
    <%= f.label :phone_number, "Phone Number", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :phone_number, class: "form-control"  %>
    </div>

    <%= f.label :email, "Email", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.email_field :email, class: "form-control"  %>
    </div>
  </div>

  <div class="row form-group">
    <%= f.label :website, "Website", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :website, class: "form-control" %>
    </div>

    <%= f.label :winery_pic, "Picture", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.file_field :winery_pic, class: "form-control" %>
    </div>
  </div>

  <div class="row form-group">
    <%= f.submit button_name, class: "btn btn-primary"%>
  </div>
  <% end %>
</div>
