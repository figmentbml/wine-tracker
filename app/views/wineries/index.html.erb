<div class="page-header">
  <div class="pull-right">
    <%= image_tag("Powered_By_Yelp_Red.png") %>
  </div>
  <h1>Colorado Wineries</h1>
</div>

<table class= "table">
  <thead>
    <tr>
      <td>
        Rating
      </td>
      <td>
        Name
      </td>
      <td>
        Website
      </td>
      <td>
        City
      </td>
    </tr>
  </thead>
  <tbody>
    <% @wineries.each do |winery| %>
    <tr>
      <td>
        <%= image_tag winery.yelp_rating_img_small %>
      </td>
      <td>
        <%= link_to winery.name, winery_path(winery) %>
      </td>
      <td>
        <%= winery.website %>
      </td>
      <td>
        <%= winery.city %>
      </td>
      <% if current_user && current_user.admin %>
        <td><%= link_to "Edit", edit_winery_path(winery), class: "btn btn-success" %></td>
        <td><%= link_to "Delete", winery, class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure?"} %></td>
      <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
